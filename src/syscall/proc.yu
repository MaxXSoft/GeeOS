import proc.proc
import lib.io

public def sysExit(code: usize): ISize {
  exit(code)
  0 as ISize
}

public def sysYield(): ISize {
  yield()
  0
}

public def sysExecve(path: u8*, argv: u8**, envp: u8**): ISize {
  if execute(path, getCurrentTid()) {
    sleep()
    0 as ISize
  }
  else {
    -1 as ISize
  }
}
